{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/success",
      "dest": "/index.html"
    },
    {
      "src": "/success/.*",
      "dest": "/index.html"
    },
    {
      "src": "/failure",
      "dest": "/index.html"
    },
    {
      "src": "/failure/.*", 
      "dest": "/index.html"
    },
    {
      "src": "/pending",
      "dest": "/index.html"
    },
    {
      "src": "/pending/.*",
      "dest": "/index.html"
    },
    {
      "src": "/tienda",
      "dest": "/index.html"
    },
    {
      "src": "/carrito",
      "dest": "/index.html"
    },
    {
      "src": "/checkout",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}